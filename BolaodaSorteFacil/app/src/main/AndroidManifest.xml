<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bolaodasortefacil">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_bolao_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_bolao"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".model.Impressao"></activity>
        <activity android:name=".view.CadastroJogador" />
        <activity android:name=".view.ListarConcurso" />
        <activity android:name=".view.LoginJogador" />
        <activity android:name=".view.ListarVendedores" />
        <activity android:name=".view.CadastroVendedor" />
        <activity android:name=".view.CadastroConcurso" />
        <activity android:name=".view.OpcaoAdm" />
        <activity android:name=".view.Gerencimento" />
        <activity android:name=".view.Aposta" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>