<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bolaodasortefacil">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_trevo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_trevo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CadastroJogador"></activity>
        <activity android:name=".view.Impressao" />
        <activity android:name=".view.LoginJogador" />
        <activity android:name=".view.Aposta" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>