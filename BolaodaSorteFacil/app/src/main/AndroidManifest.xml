<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bolaodasortefacil">
<uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_bolao_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_bolao"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".view.Login"></activity>
        <activity android:name=".view.Gerencimento"></activity>
        <activity android:name=".view.Aposta"></activity>

        <activity android:name=".MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>